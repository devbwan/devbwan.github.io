{
  "expo": {
    "name": "ai-running-app",
    "slug": "ai-running-app",
    "scheme": "runwave",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "RunWave는 러닝 경로를 기록하기 위해 위치 정보가 필요합니다.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "RunWave는 백그라운드에서도 러닝 경로를 추적하기 위해 위치 정보가 필요합니다.",
        "NSHealthShareUsageDescription": "RunWave는 건강 앱에서 러닝 데이터를 읽기 위해 권한이 필요합니다.",
        "NSHealthUpdateUsageDescription": "RunWave는 건강 앱에 러닝 데이터를 저장하기 위해 권한이 필요합니다."
      },
      "bundleIdentifier": "com.runwave.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACTIVITY_RECOGNITION"
      ],
      "package": "com.runwave.app",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "build": {
        "babel": {
          "include": [
            "@expo/vector-icons"
          ]
        }
      }
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-web-browser",
      [
        "react-native-maps",
        {
          "googleMapsApiKey": "AIzaSyCO5DB-x_bkLxyabKiEGm3bnW-3d8hTero"
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d1a5df0e-4238-4888-87b9-53f97fd36e05"
      }
    }
  }
}
